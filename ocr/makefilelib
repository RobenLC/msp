.PHONY : clean TARGET

TARGETFILE = libbkocr.a libmakemodel.a

TARGET : $(TARGETFILE)

SOURCES = dk2_ocr_20200605_ok.cpp linear.cpp tron.cpp daxpy.c ddot.c dnrm2.c dscal.c

OBJECTS_OCR = dk2_ocr_20200605_ok.o linear.o tron.o daxpy.o ddot.o dnrm2.o dscal.o

OBJECTS_MODEL = t1_20200520_ok.o linear.o tron.o daxpy.o ddot.o dnrm2.o dscal.o

libbkocr.a : $(OBJECTS_OCR)
	ar -rcs libbkocr.a $(OBJECTS_OCR)
	@echo

libmakemodel.a : $(OBJECTS_MODEL)
	ar -rcs libmakemodel.a $(OBJECTS_MODEL)
	@echo

.c.o:
	$(CXX) -D MAKELIB -c $< $(INCLUDE)
	@echo

.cpp.o:
	$(CXX) -D MAKELIB -c $< $(INCLUDE)
	@echo

clean:
	rm -f $(TARGETFILE)
	rm -f *.o





